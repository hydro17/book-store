@using Microsoft.AspNetCore.Http
@using BookStore.Extensions

@inject IHttpContextAccessor httpContextAccessor

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />

    <link href="~/css/site.css" rel="stylesheet" />
</head>

<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top bottom-shadow">
        <div class="container">
            <a asp-controller="Book" asp-action="Index" class="navbar-brand">Bookstore</a>

            <button class="navbar-toggler" data-toggle="collapse" data-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Book" asp-action="Index">Books</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Book" asp-action="Create">Create a book</a>
                    </li>
                    <li class="nav-item">
                        @{
                            var cartItemsCount = 0;

                            if (httpContextAccessor.HttpContext.Session.Get<List<int>>("shoppingCart") != null)
                            {
                                cartItemsCount = httpContextAccessor.HttpContext.Session.Get<List<int>>("shoppingCart").Count;
                            }

                            <a class="nav-link" asp-controller="cart" asp-action="index">
                                <img src="~/images/shopping-cart-white-(25619).svg" width="20" alt="shopping cart" />&nbsp;&nbsp;(@cartItemsCount)
                            </a>
                        }
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container container--mock-border container--due-to-top-menu-fixed">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
