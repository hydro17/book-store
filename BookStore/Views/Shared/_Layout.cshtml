<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />

    <link href="~/css/site.css" rel="stylesheet" />
</head>

<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top bottom-shadow">
        <div class="container">
            <a href="#" class="navbar-brand">Bookstore</a>

            <button class="navbar-toggler" data-toggle="collapse" data-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="book" asp-action="index">Books</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="book" asp-action="create">Create</a>
                    </li>

                    @{
                        // TODO add the link to cart and displayng how many items are in the cart 
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container container--mock-border container--due-to-top-menu-fixed">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/twitter-bootstrap/js/bootstrap.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
